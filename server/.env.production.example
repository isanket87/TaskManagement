# Environment
NODE_ENV=production
PORT=5000

# Database (local PostgreSQL on same server)
DATABASE_URL=postgresql://taskflow_user:YOUR_DB_PASSWORD@localhost:5432/taskflow_db

# Redis (local Redis on same server)
REDIS_URL=redis://localhost:6379

# Auth — CHANGE THIS to a random 32+ char string
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING_MINIMUM
JWT_EXPIRES_IN=7d

# Frontend URL (your server IP or domain)
CLIENT_URL=http://YOUR_SERVER_IP

# Email — Resend (free: 3000 emails/month at resend.com)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@taskflow.app

# File Storage — Cloudinary (free: 25GB at cloudinary.com)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Slack (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
